/* components/common/chooseImage/index.wxss */
.chooseImage-wrapper{
  position:absolute;
  left:0;
  top:0;
  width:100vw;
  height:100vh;
  background:rgba(0,0,0,.8);
  z-index:2;
}
.chooseImage-box{
  position:absolute;
  top:440rpx;
  left:30rpx;
  width:690rpx;
  height:500rpx;
  background-color: #fff;
}
.cancel{
  position:absolute;
  top:-20rpx;
  right:-20rpx;
  width:40rpx;
  height:40rpx;
  z-index:3;
}
.title{
  font-size:40rpx;
  text-align:center;
  font-weight:700;
  padding:20rpx 0;
}
.main{
  display:flex;
  align-items: center;
  margin-top:100rpx;
}
.left{
  display: flex;
  justify-content: space-evenly;
  align-items:center;
  flex-direction: column;
  width:200rpx;
  height:200rpx;
  border:2rpx solid #000;
  margin:0 20rpx;
}
.left image{
  width:100rpx;
  height:100rpx;
}
.right{
  flex:1;
  height:200rpx;
  display:flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
.image-list{
  display:flex;
  justify-content:space-evenly;
  width:100%;
}
.image-item{
  width:100rpx;
  height:100rpx;
  border:2rpx solid #000;
}
.image-item image{
  width:100rpx;
  height:100rpx;
}