/* components/detail/performer/index.wxss */
.performer-wrapper{
  padding:0 20rpx;
}
.performer-title{
  font-size:26rpx;
  color:#a9a9a9;
}
.performer-main{
  white-space:nowrap;
  margin-top:20rpx;
}
.performer-item{
  display:inline-block;
  width:170rpx;
  margin-right:10rpx;
}
.coverImage{
  width:100%;
  height:240rpx !important;
}
.name,.role{
  white-space:nowrap;
  text-align: center;
  text-overflow: ellipsis;
  overflow:hidden;
}
.name{
  font-size:30rpx;
  font-weight:700;
  margin-top:10rpx;
}
.role{
  font-size:24rpx;
  color:#a9a9a9;
  margin-top:6rpx;
}
